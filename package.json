    "next": "13.3.2",
    "next-swagger-doc": "0.3.6",
    "next-validations": "0.3.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.43.9",
    "react-query": "3.39.3",
    "sharp": "0.32.1",
    "swagger-ui-react": "4.18.3",
    "yup": "1.1.1"
