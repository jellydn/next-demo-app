    "lint-staged": "13.2.2",
    "postcss": "8.4.23",
    "prettier": "3.0.0",
    "tailwindcss": "3.3.2",
    "typescript": "5.0.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "importOrder": [
      "^@core/(.*)$",
      "^@server/(.*)$",
      "^@ui/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "apihero": {
    "workerDirectory": "public"
  }
