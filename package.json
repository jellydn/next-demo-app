    "next-validations": "0.3.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.46.1",
    "react-query": "3.39.3",
    "sharp": "0.32.5",
    "swagger-ui-react": "5.7.2",
    "yup": "1.2.0"
